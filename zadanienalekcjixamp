CREATE TABLE dni_tygodnia (
    id_dnia  INT AUTO_INCREMENT PRIMARY KEY NOT NULL,
    nazwa_dnia VARCHAR(20) NOT NULL,
    nazwa_skr_dnia VARCHAR(5) NOT NULL
);



