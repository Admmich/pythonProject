import math

w = [(1,2),(3,4)]

def dlugosc(punkty):
    x1, y1 = punkty[0]
    x2, y2 = punkty[1]
    return math.sqrt((x2 - x1)**2 + (y2 - y1)**2)
print(dlugosc(w))
